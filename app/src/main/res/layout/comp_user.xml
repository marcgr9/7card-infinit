<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_user_item"
    android:paddingHorizontal="12dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:src="@drawable/icon_profile_circle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/alias"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/alias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:gravity="center|start"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintEnd_toStartOf="@id/id"
        tools:text="Marc" />

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:textColor="@color/accent"
        android:fontFamily="@font/bold_extra"
        android:textSize="24sp"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintStart_toEndOf="@id/alias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/alias"
        app:layout_constraintBottom_toBottomOf="@id/alias"
        tools:text="328313" />


</androidx.constraintlayout.widget.ConstraintLayout>
